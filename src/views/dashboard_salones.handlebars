{{!-- Este es el archivo dashboard_salones.handlebars --}}
<div class="dashboard-header">
    <h1>Dashboard: {{tituloPagina}}</h1>
</div>

<hr>

<div class="widget">
    <h2>Top 5 Salones Más Populares</h2>
    <p>Datos generados por el Procedimiento Almacenado `SP_Reporte_Salones_Populares`.</p>

    <div class="report-buttons">
        <a href="/api/ver1/reportes/salones?formato=pdf" class="report-button pdf" target="_blank">Descargar PDF</a>
    </div>

    <table class="stats-table">
        <thead>
            <tr>
                <th>Salón</th>
                <th>Total de Reservas</th>
            </tr>
        </thead>
        <tbody>
            {{#each salones}}
                <tr>
                    <td>{{this.Salon}}</td>
                    <td>{{this.Total_Reservas}}</td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="2">No hay datos de reservas de salones para mostrar.</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>